<div class="container mt-5">
    <h2>User Account Details</h2>
    <div class="card p-4">
        <p><strong>Name:</strong> @Context.Session.GetString("FullName")</p>
        <p><strong>Access Level:</strong> <span class="badge bg-primary">@ViewBag.AccessType</span></p>

        @if (ViewBag.AccessType == "Admin")
        {
            <p class="text-success">You have full control over the Radar System.</p>
        }
    </div>
</div>
