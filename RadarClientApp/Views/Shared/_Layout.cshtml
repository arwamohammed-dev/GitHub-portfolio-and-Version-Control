@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Radar System</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- 1. روابط Leaflet الصحيحة (ضرورية لعمل الخريطة) -->
    <link rel="stylesheet" href="https://unpkg.com" />
    <script src="https://unpkg.com"></script>

    <style>
        /* تصميم الخريطة */
        #map {
            height: 75vh;
            width: 100%;
            border: 2px solid #333;
            border-radius: 10px;
            z-index: 1;
        }

        /* تصميم المنيو الجانبي (Side Menu) */
        .sidebar {
            height: 100%;
            width: 0;
            position: fixed;
            z-index: 2000;
            top: 0;
            left: 0;
            background-color: #1a1a1a;
            overflow-x: hidden;
            transition: 0.5s;
            padding-top: 60px;
        }

            .sidebar a {
                padding: 15px 25px;
                text-decoration: none;
                font-size: 18px;
                color: #d1d1d1;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    color: #ffffff;
                    background-color: #333;
                }

            .sidebar .closebtn {
                position: absolute;
                top: 0;
                right: 25px;
                font-size: 36px;
                margin-left: 50px;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">🛰️ Radar System</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto">
                        @if (HttpContextAccessor.HttpContext.Session.GetString("FullName") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Account" asp-action="Profile">
                                    👤 @HttpContextAccessor.HttpContext.Session.GetString("FullName") (@HttpContextAccessor.HttpContext.Session.GetString("AccessType"))
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- القائمة الجانبية (تظهر فقط بعد تسجيل الدخول) -->
    @if (HttpContextAccessor.HttpContext.Session.GetString("FullName") != null)
    {
        <div id="mySidebar" class="sidebar">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
            <a asp-controller="Account" asp-action="Profile">👤 User Account</a>
            <a href="#" onclick="alert('Radar Settings coming soon')">⚙️ Radar Settings</a>
            <a asp-controller="Account" asp-action="Logout" class="text-danger">🚪 Logout</a>
        </div>
    }

    <div class="container-fluid px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container text-center">
            &copy; 2024 - RadarClientApp - Secured Defense System
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function openNav() { document.getElementById("mySidebar").style.width = "250px"; }
        function closeNav() { document.getElementById("mySidebar").style.width = "0"; }
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
